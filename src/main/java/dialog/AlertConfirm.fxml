            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="60.0">
            <children>
                <Button cancelButton="true" onAction="#DiscardAction" prefWidth="160.0" text="Discard">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button defaultButton="true" onAction="#confirmAction" prefWidth="160.0" text="Confirm">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
